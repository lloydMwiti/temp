<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFC107"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/more_rounded_corners"
        android:backgroundTint="#fff"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="450dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:scaleType="centerCrop">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pimg"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/splash_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-440dp"
        android:fontFamily="monospace"
        android:text="Classroom"
        android:textColor="#FFFFFF"
        android:textSize="55sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/splash_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#F1F1F1"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/splash_top_text"
        android:layout_centerHorizontal="true"
        android:text="Welcome to classroom app "/>

</RelativeLayout>