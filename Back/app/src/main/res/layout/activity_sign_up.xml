<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pimg"
    tools:context=".SignUp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_above="@id/sign_holder"
        android:padding="10dp">
        <RelativeLayout
            android:id="@+id/r_circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circular_corners"
            android:layout_margin="10dp"
            android:backgroundTint="#673AB7"/>
        <TextView
            android:layout_toRightOf="@id/r_circle"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:text="classroom"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sign_holder"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"

        >
        <EditText
            android:id="@+id/sign_name"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:backgroundTint="#242424"
            android:background="@drawable/input_light_curved"
            app:elevation="8dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:paddingStart="18dp"
            android:paddingLeft="18dp"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:hint="name"/>
        <EditText
            android:id="@+id/sign_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#242424"
            android:background="@drawable/input_light_curved"
            app:elevation="8dp"
            android:textColorHint="@android:color/white"
            android:paddingStart="18dp"
            android:paddingLeft="18dp"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:hint="password"/>

        <EditText
            android:id="@+id/sign_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#242424"
            android:background="@drawable/input_light_curved"
            app:elevation="8dp"
            android:textColorHint="@android:color/white"
            android:paddingStart="18dp"
            android:paddingLeft="18dp"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:hint="email"/>
        <EditText
            android:id="@+id/sign_cohort"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#242424"
            android:background="@drawable/input_light_curved"
            app:elevation="8dp"
            android:textColorHint="@android:color/white"
            android:paddingStart="18dp"
            android:paddingLeft="18dp"
            android:textSize="17sp"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:drawableTint="#fff"
            android:paddingRight="15dp"
            android:layout_marginBottom="10dp"
            android:hint="cohort / class"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="signup"
            android:textColor="#fff"
            android:textSize="22sp"
            android:onClick="verify"
            android:background="@drawable/outline_curved"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sign_holder"
        android:paddingHorizontal="15dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="new here ?"
            android:textSize="21sp"/>
        <Button
            android:id="@+id/kill_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#00000000"
            android:textSize="19sp"
            android:textColor="#00BCD4"
            android:text="login"/>

    </LinearLayout>
</RelativeLayout>